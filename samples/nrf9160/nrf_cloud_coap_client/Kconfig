menu "nRF Cloud CoAP client sample"

config COAP_SERVER_HOSTNAME
	string "CoAP server hostname"
	default "californium.eclipseprojects.io"

menuconfig COAP_DTLS
	bool "CoAP client with DTLS support"
	help
	  If y, use together with either overlay-mbedtls.conf or
	  overlay-offload-tls.conf.

if COAP_DTLS

config COAP_DTLS_PSK
	bool "DTLS using Pre-Shared Keys"
	help
	  If y, use PSKs for security.  If n, use CA certificate + JWT.

if COAP_DTLS_PSK

config COAP_DTLS_PSK_IDENTITY
	string "DTLS Preshared Key Identity"
	default ""
	# default "n3526561061234690123456789abcdef"

config COAP_DTLS_PSK_SECRET
	string "DTLS Preshared Key Secret"
	default ""
	# default "000102030405060708090a0b0c0d0e0f"

endif

config COAP_SECTAG
	int "Security tag in which to store PSK"
	default 1

config COAP_THREAD_STACK_SIZE
	int "Stack size for CoAP reception thread"
       default 2048

endif

config COAP_SERVER_PORT
	int "CoAP server port"
	default 5684 if COAP_DTLS
	default 5683

module = NRF_CLOUD_COAP_CLIENT
module-dep = LOG
module-str = nRF Cloud CoAP Client Sample
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"
endmenu # Application sample

menu "Zephyr Kernel"
source "Kconfig.zephyr"
endmenu
